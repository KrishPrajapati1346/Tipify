    <style>
        /* Container */
.dropdown-custom {
    position: relative;
    display: inline-block;
  }
  
  /* Dropdown toggle link */
  .dropdown-toggle-custom {
    cursor: pointer;
    user-select: none;
    display: flex;
    align-items: center;
    text-decoration: none;
    color: inherit;
    padding: 0.5rem 1rem;
  }
  
  /* Dropdown menu */
  .dropdown-menu-custom {
    display: none;
    position: absolute;
    right: 0;
    top: 100%;
    background-color: white;
    min-width: 160px;
    box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
    border-radius: 0.25rem;
    margin-top: 0.25rem;
    z-index: 1000;
    padding: 0.5rem 0;
    list-style: none;
  }
  
  /* Show menu when active */
  .dropdown-menu-custom.show {
    display: block;
  }
  
  /* Dropdown items */
  .dropdown-item-custom {
    padding: 0.375rem 1rem;
    color: #212529;
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
  }
  
  .dropdown-item-custom:hover {
    background-color: #f8f9fa;
    color: #0d6efd;
  }
  
  /* Divider */
  .dropdown-divider-custom {
    margin: 0.5rem 0;
    border-top: 1px solid #e9ecef;
    width: 90%;
    margin-left: auto;
    margin-right: auto;
  }
  
    </style>
