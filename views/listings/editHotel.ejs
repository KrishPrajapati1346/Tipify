
<% layout('layouts/managerBoilerplate') %>
<% pageName = 'editHotel' %>
<body>
  <br><br><br><br><br>
  <div class="container-box">
    <!-- Header -->
    <div class="header">
      <h1>Manage Your Hotel Profile</h1>
      <p>Ensure your hotel profile is up to date for our premium network.</p>
    </div>

    <!-- Form Container -->
    <div class="form-container">
     

      <!-- Hotel Form -->
      <form action="/hotel/<%= hotel._id %>?_method=PUT" method="POST" id="hotelForm" class="hotel-form">
        <div class="form-section">
          <h3>Basic Information</h3>
          
          <!-- Hotel Name -->
          <div class="form-group">
            <div class="input-container">
              <input type="text" id="name" name="name" value="<%= hotel.name %>" maxlength="50" required class="form-input">
              <label for="name" class="form-label">Hotel Name *</label>
            </div>
          </div>

          <!-- Description -->
          <div class="form-group">
            <div class="input-container">
              <textarea id="description" name="description"  minlength="10" maxlength="1000" required class="form-textarea" rows="4" placeholder=" "><%= hotel.description %></textarea>
              <label for="description" class="form-label">Description *</label>
            </div>
          </div>
        </div>

        <div class="form-section">
          <h3>Location Details</h3>
          
          <!-- Address -->
          <div class="form-group">
            <div class="input-container">
              <input type="text" id="address" name="address" value="<%= hotel.locationID.address %>" class="form-input" placeholder=" ">
              <label for="address" class="form-label">Street Address</label>
            </div>
          </div>

          <!-- City and State -->
          <div class="form-row">
            <div class="form-group">
              <div class="input-container">
                <input type="text" id="city" name="city" value="<%= hotel.locationID.city %>" required class="form-input" placeholder=" ">
                <label for="city" class="form-label">City *</label>
              </div>
            </div>
            <div class="form-group">
              <div class="input-container">
                <input type="text" id="state" name="state" value="<%= hotel.locationID.state %>" required class="form-input" placeholder=" ">
                <label for="state" class="form-label">State *</label>
              </div>
            </div>
          </div>

          <!-- Zip Code -->
          <div class="form-group">
            <div class="input-container">
              <input type="text" id="zipCode" name="zipCode" value="<%= hotel.locationID.zipCode %>" pattern="[0-9]{6}" class="form-input" placeholder=" " required>
              <label for="zipCode" class="form-label">Zip Code (6 digits)</label>
            </div>
          </div>
        </div>

        <!-- Hidden coordinates -->
        <input type="hidden" id="latitude" name="latitude">
        <input type="hidden" id="longitude" name="longitude">

        <!-- Submit Button -->
        <div class="form-actions">
          <button type="submit" class="submit-btn">
            <span id="submitText">Save Changes</span>
            <div id="submitLoader" class="loading" style="display: none;"></div>
          </button>
        </div>
      </form>
    </div>
  </div>

  
    <!-- <script src="/js/newHotel.js"></script> -->
    <script>
/// Initialize the application
document.addEventListener('DOMContentLoaded', function() {
  initializeApp();
});

function initializeApp() {
  setupNavbarScroll();
  setupScrollAnimations();
  setupFormValidation();
  checkManagerStatus();
  animateStepProgress();
}

// Navbar scroll effect
function setupNavbarScroll() {
  const navbar = document.querySelector('.custom-navbar');
  
  window.addEventListener('scroll', function() {
      if (window.scrollY > 100) {
          navbar.classList.add('scrolled');
      } else {
          navbar.classList.remove('scrolled');
      }
  });
}
</script>
</body>
</html>